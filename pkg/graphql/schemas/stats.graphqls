type Stat {
    id: Int!
    name: String!
    description: String
    created_at: Time!
    start_at: Time!
    period: String!
    seq_period: String
}

input NewStat {
    name: String!
    description: String
    start_at: Time!
    period: String!
    seq_period: String
}

type GetStatsResponse {
    total: Int!
    stats: [Stat!]!
}

input UpdateStat {
    id: Int!
    name: String
    description: String
    start_at: Time
    period: String
    seq_period: String
}

